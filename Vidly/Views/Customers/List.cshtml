@model List<Vidly.Models.Customer>

@{
    ViewBag.Title = "CustomerList";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Customers</h2>



@if (Model.Count == 0)
{
    <h2>No Results</h2>
}
else { 
<ul>
   <li>Customer</li> 
    @foreach (var mycustomer in Model)
    {
        
        <li>@Html.ActionLink(mycustomer.Name, "Details", new { mycustomer.Id })</li>
    }
</ul>
}